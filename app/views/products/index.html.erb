<div class="events">
  <div class="container">
  <p id="notice"><%= notice %></p>
  <br><br><br>
<% if is_admin? %>
  <%= link_to 'New Product', new_product_path %>
  <% end %>
  <h1 style="text-align:center;">Products</h1>

<hr>
    <div class="container">
    	<div class="row">
        <% @products.each do |product| %>
    		<div class="col-xs-18 col-sm-4 col-md-3 col-lg-4">
    			<div class="productbox">
    				<div class="imgthumb img-responsive">
    					  <%= link_to (image_tag product.images[0].image.url(:large), :class => ('card-img-top images')), product_path(product),remote: true %>
    				</div>
    				<div class="caption">
    					<h3><%= product.title %></h3>
              <h5>$<%= product.price %></h5>
    				</div>
    			</div>
    		</div>
        <% end %>
        <div class="col-xs-18 col-sm-4 col-md-3" id="result"></div>
    	</div><!--/row-->
    </div><!--/container -->

    <br><br>
  </div>
</div>
