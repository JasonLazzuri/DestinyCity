<div class="events">
  <div class="container">
  <p id="notice"><%= notice %></p>
  <br><br><br>
  <%= link_to 'New Product', new_product_path %>

  <h1 style="text-align:center;">Products</h1>

<hr>
    <div class="container">
    	<div class="row">
        <% @products.each do |product| %>

    		<div class="col-xs-18 col-sm-4 col-md-3">
    			<div class="productbox">
    				<div class="imgthumb img-responsive">
    					  <%= link_to (image_tag product.images[0].image.url(:large), :class => ('card-img-top images')), product_path(product) %>
    				</div>
    				<div class="caption">
    					<h3><%= product.title %></h3>
              <h5>$<%= product.price %></h5>
    					<a href="#" class="btn btn-default btn-xs pull-right" role="button"><i class="glyphicon glyphicon-edit"></i></a> <a href="#" class="btn btn-info btn-xs" role="button">Add To Cart</a>
    				</div>
    			</div>
    		</div>
        <% end %>

    	</div><!--/row-->
    </div><!--/container -->
<br><br>
  </div>
</div>
