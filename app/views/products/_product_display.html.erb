<div class="events">
  <div class="container">

    <div class="title-bar">
      <h1><%= @product.title %></h1>
    </div>
    <p id="notice"><%= notice %></p>

    <%= image_tag @product.images[0].image.url(:large) %>

      <h3>Description:</h3>
      <%= @product.description %>


      <h3>Price:</h3>
      $<%= @product.price %>
      <br><br>

      <%= form_for @order_items, remote:true  do |f| %>
        <%= f.hidden_field :product_id, value: product.id %>
        <%= f.number_field :quantity %>
        <%= f.submit "Add to cart" %>
      <% end %>
      <br><br>

      <% if is_admin? %>
        <%= link_to 'Destroy', @product,:class => "btn btn-primary btn-lg", method: :delete, data: { confirm: 'Are you sure?' } %>
        <%= link_to 'Edit', edit_product_path(@product),:class => "btn btn-primary btn-lg" %>
      <% end %>
    <%= link_to 'Back', products_path,:class => "btn btn-primary btn-lg" %>
    <br><br>

  </div>
</div>
