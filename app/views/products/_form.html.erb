
    <%= form_for [@product], url: products_path, html: { multipart: true } do |form| %>

      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, :class => "form-control", id: :product_title %>
      </div>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, :class => "form-control", id: :product_description %>
      </div>

      <div class="form-group">
        <%= form.label :price %>
        <%= form.number_field :price, value: number_to_currency(form.object.price.to_f, delimiter: '', unit: ''), step: :any, :class => "form-control", id: :product_price %>
      </div>


      <div class="form-group">
        <%= form.label :category %>
        <br>
        <%= form.select :category, options_for_select([['Select One', ''], 'independant', 'graphic novel','merchandise']), :class => "form-control"%>
      </div>

      <div class="control-group">
        <div class="controls">
          <%= form.label :image %>
          <%= form.file_field :image, type: :file, multiple: true %>
        </div>
      </div>
      <br>

      <div class="actions">
        <%= form.submit :class => "btn btn-primary" %>
      </div>

    <% end %>
