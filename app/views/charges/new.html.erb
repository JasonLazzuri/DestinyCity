<div class="events">
  <div class="container">
  <%= form_tag address_charges_path do %>
    <article>
      <% if flash[:error].present? %>
        <div id="error_explanation">
          <p><%= flash[:error] %></p>
        </div>
      <% end %>
    <div class="well">


      <label class="amount">
        <span>Amount: <%= number_to_currency current_order.total_price  %></span>

      </label>
      <p style="font-family:helvetica;"> Ship To this Address: <%= @address.street %>
                                <%= @address.city %>
                                <%= @address.state %>
                                <%= @address.zip %>
      </p>
    </article>

    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-description="Safe And Secure"
            data-amount="<%= @amount %>"
            data-locale="auto"></script>
  <% end %>
</div>
  <div class="spacer" style="height:510px;"></div>

  </div>
</div>
